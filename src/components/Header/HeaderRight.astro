---
import { SITE } from '@/config';
import HeaderLink from './HeaderLink.astro';
import Search from './Search.astro';
---

<div style="flex-grow: 1;" class="text-right md:mr-1 -mr-1">
  <Search />
  <HeaderLink href="/" class="lg:inline-block hidden">首页</HeaderLink>
  <HeaderLink href="/about">关于我</HeaderLink>
  <!-- <HeaderLink href={SITE.blogPage} target="_blank">Blog</HeaderLink> -->
  <HeaderLink href={`https://twitter.com/${SITE.twitterId}`} target="_blank" class="lg:inline-block hidden"
    >Twitter</HeaderLink
  >
  <HeaderLink
    href={`https://github.com/${SITE.githubId}`}
    target="_blank"
    class="lg:inline-block hidden">GitHub</HeaderLink
  >
  <HeaderLink href="/rss.xml" target="_blank" class="lg:inline-block hidden"
    >RSS</HeaderLink
  >
</div>
